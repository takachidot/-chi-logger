{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",                               
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./dist",
    "incremental": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
